{% extends 'base.html.twig' %}
{% block body %}
<style>
.container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center; /* Centrer horizontalement */
    align-items: center; /* Centrer verticalement */
    margin: 20px;
    padding-left: 500px;
}

/* Carte individuelle (div avec image et titre) */
.card {
    width: 250px;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    background-color: #fff;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

/* Image de la carte */
.card img {
    width: 100%;
    height: auto;
    object-fit: cover;
}

/* Titre de la carte */
.card h3 {
    text-align: center;
    font-size: 1.2rem;
    color: #333;
    padding: 15px 0;
    background-color: #f4f4f4;
    margin: 0;
}

/* Lien cliquable */
.card a {
    text-decoration: none;
    color: inherit;
}
</style>
